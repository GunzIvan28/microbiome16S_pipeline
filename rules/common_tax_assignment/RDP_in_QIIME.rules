rule QIIME1_assign_taxonomy:
    conda:
        "../../envs/QIIME1.yml"
    input:
        "{tool}/2_denoised/dna-sequences.fasta",
        workflow.basedir + "/data/{db_taxonomy}/EzBioCloud_V3V4.fasta",
        workflow.basedir + "/data/{db_taxonomy}/EzBioCloud_V3V4_taxonomy.txt"
    output:
        "{tool}/3_classified/{classifier}/{db_taxonomy}/dna-sequences_tax_assignments.txt",
        "{tool}/3_classified/{classifier}/{db_taxonomy}/dna-sequences_tax_assignments.log"
    log:
        logging_folder + "{tool}/3_classified/{classifier}/{db_taxonomy}/dna-sequences_tax_assignments_log.txt"
    threads:
        8
    shell:
        '''
        parallel_assign_taxonomy_rdp.py \
          -i {input[0]} \
          -r {input[1]} \
          -t {input[2]} \
          -o $(dirname {output[0]}) \
          -c 0.5 \
          --rdp_max_memory 30000
           >> {log[0]}
        '''
