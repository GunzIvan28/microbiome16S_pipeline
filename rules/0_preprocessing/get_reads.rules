### Unzip reads and copy them. Rest of the pipeline is not designed for single-end reads yet

rule copy_fastq_paired_from_link:
    input:
        lambda wildcards: expand(link_directory + original_names[wildcards.sample] + "_{ext}", ext=read_naming[wildcards.sample])
    output:
        temp("raw_reads/{sample}_R1.fastq.gz"),
        temp("raw_reads/{sample}_R2.fastq.gz")
    resources:
        max_copy=1
    shell:
        """
        cp {input[0]} {output[0]}
        cp {input[1]} {output[1]}
        gzip -t {output[0]}
        gzip -t {output[1]}
        """


rule copy_fastq_single_from_link:
    input:
        lambda wildcards: link_directory + original_names[wildcards.sample]+ "." +read_naming[wildcards.sample][0]
    output:
        temp("raw_reads/{sample}_single.fastq.gz")
    resources:
        max_copy=1
    shell:
        """
        gzip -t {input[0]}
        cp {input[0]} {output[0]}
        """
        
        
