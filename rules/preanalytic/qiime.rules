
rule qiime_import:
    conda:
        pipeline_path + "envs/qiime2-2018.6-py35-linux-conda.yml"
    input:
        "0_importing_data/manifest.csv",
    output:
        "0_importing_data/imported_data.qza",
    log:
        logging_folder + "qiime/import.txt"
    shell:
        """
        qiime tools import \
        --type 'SampleData[PairedEndSequencesWithQuality]' \
        --input-path {input[0]} \
        --output-path {output[0]} \
        --source-format PairedEndFastqManifestPhred33 >> {log[0]}          
        """


# raw or trimmed sequences?
rule qiime_cutadapt_trim_paired:
    conda:
        pipeline_path + "envs/qiime2-2018.6-py35-linux-conda.yml"
    input:
        "0_importing_data/imported_data.qza",
    output:
        "1a_cutadapt_primers_trimming/trimmed_sequences.qza",
    threads:
        4
    log:
        logging_folder + "qiime/cutadapt_trim-paired.txt"
    shell:
        """
        qiime cutadapt trim-paired \
        --i-demultiplexed-sequences {input[0]} \
        --p-cores {threads} \
        --p-front-f CCTACGGGNGGCWGCAG \
        --p-front-r GACTACHVGGGTATCTAATCC \
        --p-match-read-wildcards \
        --p-match-adapter-wildcards \
        --o-trimmed-sequences  {output[0]} \
        --verbose
        >> {log[0]}          
        """

rule qiime_demux_summarize:
    conda:
        pipeline_path + "envs/qiime2-2018.6-py35-linux-conda.yml"
    input:
        "1a_cutadapt_primers_trimming/trimmed_sequences.qza",
    output:
        "1a_cutadapt_primers_trimming/visualization.qzv",
    log:
        logging_folder + "qiime/demux summarize.txt"
    shell:
        """
        qiime demux summarize \
          --i-data {input[0]} \
          --o-visualization output[0] >> {log[0]}          
        """




rule qiime_vsearch_join_pairs:
    conda:
        pipeline_path + "envs/qiime2-2018.6-py35-linux-conda.yml"
    input:
        "1a_cutadapt_primers_trimming/trimmed_sequences.qza",
    output:
        "1b_vsearch_joining/joined_sequences.qza",
    log:
        logging_folder + "qiime/evsearch_join_pairs.txt"
    shell:
        '''
        qiime vsearch join-pairs \
          --i-demultiplexed-seqs {input[0]} \
          --o-joined-sequences {output[0]} \
          --p-minovlen 20 \
          --p-maxdiffs 3 \
          --p-minmergelen 350 \
          --p-maxmergelen 600 \
          --verbose >> {log[0]}       
        '''


'''
qiime demux summarize \
  --i-data ./1b_vsearch_joining/joined_sequences.qza \
  --o-visualization ./1b_vsearch_joining/joined_sequences.qzv
'''

rule qiime_quality_filter_q_score_joined:
    conda:
        pipeline_path + "envs/qiime2-2018.6-py35-linux-conda.yml"
    input:
        "1b_vsearch_joining/joined_sequences.qza",
    output:
        "1c_q_score_filtering/quality_filtered_sequences.qza",
        "1c_q_score_filtering/quality_filtered_stats.qza"
    log:
        logging_folder + "qiime/evsearch_join_pairs.txt"
    shell:
        '''
         qiime quality-filter q-score-joined \
            --i-demux {input[0]} \
            --p-min-quality 20 \
            --p-quality-window 3 \
            --p-min-length-fraction 0.75 \
            --p-max-ambiguous 0 \
            --o-filtered-sequences {output[0]} \
            --o-filter-stats {output[0]} \
            --verbose >> {log[0]}       
        '''





rule qiime_deblur_denoise_16S:
    conda:
        pipeline_path + "envs/qiime2-2018.6-py35-linux-conda.yml"
    input:
        "1c_q_score_filtering/quality_filtered_sequences.qza",
    output:
        "2_deblur_denoised/table_deblur_390.qza",
        "2_deblur_denoised/seqs_deblur_390.qza",
        "2_deblur_denoised/stats_deblur_390.qza",
    log:
        logging_folder + "qiime/vsearch_join_pairs.txt"
    shell:
        '''
        qiime deblur denoise-16S \
            --i-demultiplexed-seqs {input[0]} \
            --p-trim-length 390 \
            --p-sample-stats \
            --p-min-reads 2 \
            --p-min-size 2 \
            --p-hashed-feature-ids \
            --p-jobs-to-start 2 \
            --o-table {output[0]} \
            --o-representative-sequences {output[1]} \
            --o-stats {output[2]} \
            --verbose >> {log[0]}       
        '''

